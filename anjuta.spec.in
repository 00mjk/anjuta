Requires: 	vte >= @VTE_REQUIRED@
Requires: 	libxml2 >= @LIBXML_REQUIRED@
Requires: 	pango >= @PANGO_REQUIRED@
Requires: 	pcre >= @PCRE_REQUIRED@
Requires: 	devhelp >= @LIBDEVHELP_REQUIRED@
