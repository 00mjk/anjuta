GNOME_PRINT_UI_REQUIRED=1.0
GNOME_VFS_REQUIRED=1.9.4
LIBZVT_REQUIRED=2.0.0
GDK_PIXBUF_REQUIRED=2.0.0

AC_SUBST(GLIB_REQUIRED)
AC_SUBST(GTK_REQUIRED)
AC_SUBST(ORBIT_REQUIRED)
AC_SUBST(LIBGLADE_REQUIRED)
